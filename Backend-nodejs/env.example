# API server
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=https://app.example.com,https://admin.example.com

# Database (required)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=lockgame
DB_USER=lockgame
DB_PASSWORD=super-secret-password
# Set to "true" if your MySQL server enforces TLS
DB_SSL=false
# Only used when DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=true
# Enable SQL logs locally if needed
DB_LOGGING=false

# Firebase Admin credentials (choose one strategy)
# 1. Provide the three fields below (recommended for servers)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@example.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# 2. Or provide the service-account JSON directly/base64
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}
# FIREBASE_SERVICE_ACCOUNT_BASE64=eyJ0eXAi...
# FIREBASE_SERVICE_ACCOUNT_PATH=/home/user/firebase-key.json

